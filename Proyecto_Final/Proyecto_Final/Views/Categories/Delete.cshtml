@model Proyecto_Final.DAL.Entities.Category

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <main role="main" class="pb-3 p-3">
        <h1 class="text-center" >Eliminar</h1>
        <h3>¿Estás seguro que deseas eliminar esta categoría?</h3>
        <hr />
        <div>
            <partial name="../Shared/PartialViews/_CategoryDetailDelete" />
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <br />
                <input type="submit" value="Eliminar" class="btn btn-outline-danger" />
                <a asp-action="Index" class="btn btn-outline-success">Regresar</a>
            </form>
        </div>
    </main>
</div>


