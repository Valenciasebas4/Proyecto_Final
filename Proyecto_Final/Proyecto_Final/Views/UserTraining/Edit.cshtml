@model Proyecto_Final.DAL.Entities.UserTraining
@{
    ViewData["Title"] = "Edit";
}



<div class="container">
    <main role="main" class="pb-3 p-3">
        <h1 class="text-center rounded-pill div-title">Editar entrenamiento</h1>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <spam>Solo puedes editar la fecha del entrenamiento o eliminarlo</spam>
                <form asp-action="Edit">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CreatedDate" />
                    <input type="hidden" asp-for="TrainingID" />
                    <input type="hidden" asp-for="UserId" />

                    

                    <partial name="../Shared/PartialViews/_UserTrainingCreateEdit" />

                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-outline-primary" />
                        <a asp-action="MyTrainings" class="btn btn-outline-success">Regresar</a>
                    </div>
                </form>
            </div>
        </div>
    </main>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}