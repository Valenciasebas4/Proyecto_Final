@model Proyecto_Final.DAL.Entities.State

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <main role="main" class="pb-3 p-3">
        <h1>Eliminar</h1>

        <h3>¿Estás seguro que deseas eliminar este dpto/estado?</h3>
        <div>
            <partial name="../Shared/PartialViews/_StateDetailDelete" />
            <form asp-action="DeleteState">
                <input type="hidden" asp-for="Id" />
                <br />
                <input type="submit" asp-route-stateId="@Model?.Id" value="Eliminar" class="btn btn-outline-danger" />
                <a asp-action="Details" asp-route-id="@Model?.Country.Id" class="btn btn-outline-success">Regresar</a>
            </form>
        </div>
    </main>
</div>


